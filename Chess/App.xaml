             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Chess"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#237AC6</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#BEBEBE</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#4F4867</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        
    </Application.Resources>
</Application>
